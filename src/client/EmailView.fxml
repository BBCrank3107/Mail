<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.EmailViewController">
    <!-- Hiển thị tên người dùng -->
    <Label fx:id="usernameLabel" text="Logged in as:" />

    <!-- Các thành phần khác của giao diện -->
    <Button text="Compose" onAction="#handleComposeEmail" />
    <Button text="Seen" onAction="#handleSeenEmail" /> <!-- Nút Seen -->
    <ListView fx:id="emailListView" />
    <TextArea fx:id="emailContentArea" wrapText="true" editable="false" />
</VBox>
